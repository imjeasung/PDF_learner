# PDF Learner 환경변수 설정 파일
# 이 파일에는 민감한 정보(API 키 등)가 들어갑니다.
# 절대 GitHub나 다른 사람에게 공유하지 마세요!

# OpenAI API 키 (필수)
OPENAI_API_KEY="https://platform.openai.com/api-keys 에서 발급받으세요"

# OpenAI 모델 설정
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# 서버 설정
HOST=localhost
PORT=8000
DEBUG=True

# 파일 경로 설정
UPLOAD_FOLDER=uploads
DATA_FOLDER=data
STATIC_FOLDER=static

# PDF 처리 설정
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf

# AI 설정
MAX_TOKENS=1000
TEMPERATURE=0.7
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 데이터베이스 설정
DATABASE_URL=sqlite:///./pdf_learner.db
VECTOR_DB_PATH=./data/vector_db
